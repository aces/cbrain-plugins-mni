
<%

#
# CBRAIN Project
#
# $Id$
#

-%>

<tr>

<td><%= check_box_tag( "file_args[#{idx}][launch]", '1', file[:launch] ) %></td>

<td>
  <%= h(file[:t1_name]) %>
  <%= hidden_field_tag "file_args[#{idx}][t1_name]", file[:t1_name] %>
  <%= hidden_field_tag "file_args[#{idx}][t2_name]", file[:t2_name] %>
  <%= hidden_field_tag "file_args[#{idx}][pd_name]", file[:pd_name] %>
  <%= hidden_field_tag "file_args[#{idx}][mk_name]", file[:mk_name] %>
</td>

<td><%= text_field_tag "file_args[#{idx}][prefix]", file[:prefix] %></td>
<td><%= text_field_tag "file_args[#{idx}][dsid]",   file[:dsid]   %></td>

<% if file[:t2_name] %>
  <td><FONT COLOR="green">&#10004;</FONT></td>
<% else %>
  <td><FONT COLOR="red">&times;</FONT></td>
<% end %>

<% if file[:pd_name] %>
  <td><FONT COLOR="green">&#10004;</FONT></td>
<% else %>
  <td><FONT COLOR="red">&times;</FONT></td>
<% end %>

<% if file[:mk_name] %>
  <td><FONT COLOR="green">&#10004;</FONT></td>
<% else %>
  <td><FONT COLOR="red">&times;</FONT></td>
<% end %>

<% if file[:t2_name] || file[:pd_name] %>
  <td><%= check_box_tag( "file_args[#{idx}][multispectral]", '1', file[:multispectral] ) %></td>
<% else %>
  <td></td>
<% end %>

<% if file[:mk_name] %>
  <td><%= check_box_tag( "file_args[#{idx}][spectral_mask]", '1', file[:spectral_mask] ) %></td>
<% else %>
  <td></td>
<% end %>

</tr>
