<% title 'DrmaaCivetQc Parameters' %>

<h1>New DrmaaCivetQc task</h1>

<%
     form_tag( '/tasks/create' ) do 
-%>

<!-- 
  Make sure parameters 'task' and 'file_ids' are always set to something,
  as they are required internally.
-->

<%= hidden_field_tag :task, 'DrmaaCivetQc' %>
<%= hidden_field_tag 'bourreau_id', params[:bourreau_id] %>
<% params[:file_ids].each do |id| %>
<%= hidden_field_tag 'file_ids[]',  id %>
<% end %>

<strong>Description (optional)</strong><BR>
<%=  text_area_tag :description, nil, :cols  => 40 %><br><br>

<!-- 
   Render form fields here.
   Default arguments returned by DrmaaCivetQc.get_default_args()
   are stored in the hash: default_args
-->

<%= submit_tag 'Start DrmaaCivetQc' %>

<% end %>
