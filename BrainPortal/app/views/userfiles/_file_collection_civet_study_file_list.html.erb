
<table class="resource_list">
  <% @userfile.subject_ids.each do |subject_id| %>
      <% on_click_ajax_replace({:element  => "tr", :url  => url_for(:action  => :content, :study_subject => subject_id), :replace => "#{subject_id}_files", :before  => '<span class="loading_message">Loading...</span>'}, {:id => subject_id}) do %>
        <th>Subject: <%= subject_id %> <span class="ajax_onclick_show_child small warning">Show files</span><span class="ajax_onclick_hide_child small warning" style="display:none">Hide files</span></th>
      <% end %>
      <tr>
        <td id="<%= subject_id %>_files"></td>
      </tr>
  <% end %>
</table>

