         <strong>QC</strong><br><br>
         <%= ajax_element(url_for(:action  => :display, :viewer => "civet_study/qc_file", :qc_file  => "base")) do %>
           <span class="loading_message">Loading...</span>
         <% end %>
         <br>
         <div id="qc_data">
         </div>
     <% end %>
    <%= overlay_ajax_link "Civet QC Legend", "/doc/userfiles/civetqc_results.html", :class => "action_link" %>
  <% end %>
<% end %>

