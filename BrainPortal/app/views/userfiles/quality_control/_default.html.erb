<% if @userfile.respond_to?(:qc_images) && !@userfile.qc_images.blank? %>
  <% if @userfile.is_locally_synced? %>
    <% @userfile.qc_images.map(&:name).each do |qc| %>
      <%= image_tag url_for(:action  => :content, :id  => @userfile.id, :content_loader => :collection_file, :arguments => qc) %><br>
    <% end %>
  <% else %>
    This file must be synced locally to view QC data.
  <% end %>
<% else %>
  File <% @userfile.name %> does not contain QC data.
<% end %>

