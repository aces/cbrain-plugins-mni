-%> 
 
<table class="userfiles">
   <tr>
      <th>Final</th>
      <th>Native</th>
      <th>Surfaces</th>
   </tr>
   <tr class="list-odd">
      <td class="no_wrap">
         <%= @userfile.list_final.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/final/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_native.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/native/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_surfaces.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/surfaces/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
   </tr>
   <tr>
      <th>Classify</th>
      <th>Thickness</th>
      <th>Verify</th>
   </tr>
   <tr class="list-odd">
      <td class="no_wrap">
         <%= @userfile.list_classify.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/classify/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_thickness.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/thickness/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_verify.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/verify/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
   </tr>
   <tr>
      <th>Linear Transformations</th>
      <th>Non-linear Transformations</th>
      <th>Surface Transformations</th>
   </tr>
   <tr class="list-odd">
      <td class="no_wrap">
         <%= @userfile.list_linear_transforms.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/transforms/linear/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_non_linear_transforms.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/transforms/nonlinear/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
      <td class="no_wrap">
         <%= @userfile.list_surfreg_transforms.map{ |file|  string_if(@userfile.is_locally_synced?, check_box_tag('filelist[]', "#{@userfile.name}/transforms/surfreg/" + file.name)) + file.name + " (#{pretty_size(file.size).strip})"}.join('<br>') %>
      </td>
   </tr>
</table>
