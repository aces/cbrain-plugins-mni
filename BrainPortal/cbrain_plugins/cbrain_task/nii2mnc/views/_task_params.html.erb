        ],
        [
          "Flip two axis",
                        [
                          [ "Flip X, then Y", "xy" ],
                          [ "Flip X, then Z", "xz" ],
                          [ "Flip Y, then X", "yx" ],
                          [ "Flip Y, then Z", "yz" ],
                          [ "Flip Z, then X", "zx" ],
                          [ "Flip Z, then Y", "zy" ],
                        ]
        ],
        [
          "Flip three axis",
                        [
                          [ "Flip X, then Y, then Z", "xyz" ],
                          [ "Flip X, then Z, then Y", "xzy" ],
                          [ "Flip Y, then X, then Z", "yxz" ],
                          [ "Flip Y, then Z, then X", "yzx" ],
                          [ "Flip Z, then X, then Y", "zxy" ],
                          [ "Flip Z, then Y, then X", "zyx" ],
                        ],
        ],
      ],
      params[:flip_order] )
 %>


</fieldset>

