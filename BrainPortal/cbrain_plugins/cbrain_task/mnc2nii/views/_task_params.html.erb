<big>Command options:</big><BR>

<table class="simple">
   <tr>
      <td>
         Output voxel data type:
      </td>
      <td>
         <select name="<%= :voxel_type.to_la %>">
                    <%= options_for_select( [ [ "(Select data type)",              "" ],
                                              [ "'byte': 8-bit integer",           "byte" ],
                                              [ "'short': 16-bit integer",         "short" ],
                                              [ "'int': 32-bit integer",           "int" ],
                                              [ "'float': 32-bit floating point",  "float" ],
                                              [ "'double': 64-bit floating point", "double" ],
                                              [ "'default': let the program choose!", "default" ]
                                            ], params[:voxel_type]) %>
         </select>
         For <strong>integer</strong> voxel data types, use
         <select name="<%= :voxel_int_signity.to_la %>">
                    <%= options_for_select( [ [ "(Select sign)",                "" ],
                                              [ "signed integers",              "signed" ],
                                              [ "unsigned integers",            "unsigned" ],
                                              [ "let the program choose!",      "default" ]
                                            ], params[:voxel_int_signity] ) %>
         </select>
      </td>
   </tr>
   <tr>
      <td>
         Output file format:
      </td>
      <td>
         <select name="<%= :file_format.to_la %>">
           <%= options_for_select(
             [ "dual", "ASCII", "nii", "analyze"],
             params[:file_format])
           %>
           </select>
      </td>
   </tr>

</table>

